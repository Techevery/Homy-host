{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                               
    "typeRoots": ["./node_modules/@types", "./@types"],                                 
    "outDir": "./dist",   
    "rootDir": "./src",                              
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,           
    "strict": false,                                      
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */
    "diagnostics": true, // Enables detailed compilation statistics
    "listFiles": true,   // Lists all files included in the build
    "listEmittedFiles": true,
  },
  "include": ["src/**/*.ts"],	
  "exclude": ["node_modules","dist"]	
}
